<!-- views/users/user_show.ejs -->

<div class="user-page">
    <div class="user-box">
        <h2>유저 정보</h2>
        <div>
            <label for = "name">유저 이름</label>
            <span name = "name"><%= user.name %> </span>
        </div>
        <div>
            <label for = "id">유저 아이디</label>
            <span name = "id"><%= user.userID %> </span>
        </div>
        <div>
            <label for = "email">유저 이메일</label>
            <span name = "email"><%= user.email %> </span>
        </div>
        <div>
            <a href = '/'>뒤로가기</a>
            <a href = '/user/<%= user.userID %>/edit'>편집하기</a>
        </div>
    </div>
</div>